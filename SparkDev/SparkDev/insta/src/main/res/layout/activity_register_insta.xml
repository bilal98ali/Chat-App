<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InstaRegisterActivity">

    <ImageView
        android:id="@+id/register_image"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/roary"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/panther_hub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#081E3F"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_below="@+id/register_image"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:id="@+id/username"
        android:layout_marginTop="15dp"
        android:paddingBottom="10dp"
        android:textSize="15dp"
        android:layout_below="@id/panther_hub"
        android:inputType="text"
        android:drawableStart="@drawable/uname"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Full name"
        android:id="@+id/fullname"
        android:layout_marginTop="15dp"
        android:paddingBottom="10dp"
        android:textSize="15dp"
        android:layout_below="@id/username"
        android:inputType="textPersonName"
        android:drawableStart="@drawable/flname_new"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fullname"
        android:hint="Email"
        android:textSize="15dp"
        android:inputType="textEmailAddress"
        android:paddingBottom="10dp"
        android:drawableStart="@drawable/rsz_email"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="17dp"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/email"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingBottom="10dp"
        android:textSize="15dp"
        android:drawableStart="@drawable/rsz_password"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="17dp"/>



    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:padding="4dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="19dp"
        android:text="Create Account"
        android:textSize="15sp"
        android:textColor="@android:color/background_light"
        android:background="@drawable/buttons"/>

    <TextView
        android:id="@+id/txt_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/register"
        android:text="Already have an account? Click here."
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="23dp"/>

</RelativeLayout>